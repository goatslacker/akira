{
  "name": "akira",
  "author": "Josh Perez <josh@goatslacker.com>",
  "version": "0.0.1",
  "description": "toy functional language that transpiles to JavaScript",

  "scripts": {
    "start": "bin/akira make build && node lib/lang/grammar.js",
    "stop": "git co lib/lang/grammar.js",
    "test": "bin/akira make test"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/goatslacker/akira.git"
  },

  "dependencies": {
    "esprima": "*",
    "escodegen": "*",
    "dune": "*"
  },

  "bundledDependencies": [
    "Store",
    "addScope",
    "ast",
    "betaRedex",
    "concatMap",
    "createFunction",
    "destructure",
    "genUniqueIdentifier",
    "implicitReturn",
    "inline",
    "log",
    "makeArray",
    "obj2str",
    "tg",
    "traverse",
    "unwrapExpressionStatement"
  ],

  "devDependencies": {
    "jison": "*",
    "nodewatch": "*"
  },

  "bin": { "akira": "./bin/akira" },

  "engines": {
    "node": ">= 0.4.0"
  }
}
