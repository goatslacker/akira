export eq = \a, b -> a is b
export neq = \a, b -> a isnt b
export gt = \a, b -> a > b
export lt = \a, b -> a < b
export gte = \a, b -> a >= b
export lte = \a, b -> a <= b

export assert = \a, b {
  if not assert.successes
    then assert <+ { successes := [], failures := [] }
    else none

  if a == b then assert.successes.push: [a, b]; else assert.failures.push: [a, b]
}

export assert-deep = \a, b {
  len = filter: (\x, i -> x is b !! i - 1), a | @.length
  assert: len, a.length
}
