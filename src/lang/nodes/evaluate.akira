ast = require 'ast'
esprima = require 'esprima'
obj2str = require 'z/obj2str'

Evaluate = class
  [@expr @evl]
    this

  compile [context]
    a = ast this.expr context

    if this.evl
      { @__akira a }
    else
      xform = '(' ++ (obj2str a) ++ ')'
      xast = esprima.parse xform
      xast.body.0.expression


module.exports = Evaluate
