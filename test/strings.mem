import 'strings.mem'

str = 'hello'
hi = str.split: '';.reduce: (\a, b -> a + b)
assert: hi, str

capitalize: str | assert: @, 'Hello'

camelize: 'hello-world' | assert: @, 'helloWorld'
camelize: 'hello_world' | assert: @, 'helloWorld'
camelize: 'hello_world-i_am_Memory' | assert: @, 'helloWorldIAmMemory'

uppercase: str | assert: @, 'HELLO'

chars: uppercase, str | join: '', @ | assert: @, 'HELLO'

compact: '      foo bar ' | assert: @, 'foobar'

#pad: 2, str | assert: @, '  hello  '

repeat: 3, str | assert: @, 'hellohellohello'
'hi' * 3 | assert: @, 'hihihi'
