a = 1
b = 2
assert: a, 1
assert: b, 2
(\none {
  # local a, no shadowing
  a = 3
  assert: a, 3
}): none

(\none {
  # although we can reference a
  b = a - 1
  assert: b, 0
}): none

assert: 3, a + b

c = if true then 1 else 2
d = if 1 then true else if 2 then true else false
e = f = g = 1

assert: c, 1
assert: d, true
assert: e, f
assert: f, g
assert: g, 1
